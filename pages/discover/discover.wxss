page {
  background-color: #f6f6f6;
  box-sizing: border-box;
}

.discover-container {
  padding-top: 180rpx; 
  padding-bottom: env(safe-area-inset-bottom);
  padding-left: 24rpx;
  padding-right: 24rpx;
}

.header {
  padding: 10rpx 8rpx;
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 44rpx;
  font-weight: 800;
  color: #333;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

.hotel-card {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.03);
}

.hotel-cover {
  width: 100%;
  height: 320rpx;
  display: block;
}

.hotel-info {
  padding: 24rpx;
}

.name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.hotel-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}

.score-badge {
  background: #fff8f0;
  padding: 6rpx 14rpx;
  border-radius: 12rpx;
  color: #fa4126;
  font-weight: bold;
  flex-shrink: 0;
}

.score-num {
  font-size: 28rpx;
}

.score-unit {
  font-size: 20rpx;
  margin-left: 2rpx;
}

.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.tag {
  font-size: 20rpx;
  color: #666;
  background: #f5f5f5;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
}

.divider {
  height: 1rpx;
  background: #f0f0f0;
  margin-bottom: 24rpx;
}

.room-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.room-item:last-child {
  margin-bottom: 0;
}

.room-thumb {
  width: 110rpx;
  height: 110rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background: #eee;
  flex-shrink: 0;
}

.room-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.room-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.room-info {
  font-size: 22rpx;
  color: #999;
}

.room-price {
  color: #fa4126;
  font-weight: bold;
  flex-shrink: 0;
}

.symbol {
  font-size: 22rpx;
  margin-right: 2rpx;
}

.num {
  font-size: 34rpx;
}

.booking-btn-wrap {
  margin-left: 16rpx;
  flex-shrink: 0;
}

.booking-popup {
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx 24rpx;
}

.popup-header {
  margin-bottom: 32rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 16rpx;
}

.popup-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.popup-content {
  margin-bottom: 32rpx;
}

.date-picker-wrapper {
  margin-bottom: 24rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.date-cell {
  background: #f9f9f9;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #eee;
}

.popup-footer {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

.popup-footer t-button {
  flex: 1;
}